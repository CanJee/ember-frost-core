{{! Template for the frost-radio-group component }}
{{#if hasBlock}}
  {{yield (hash
    button=(component 'frost-radio-button'
        groupId=id
        receivedHook=hook
        selectedValue=selectedValue
        onChange=onChange
      )
    )
  }}
{{else}}
  {{#each meshedInputs as |input|}}
    {{#frost-radio-button
      groupId=id
      selectedValue=selectedValue
      disabled=input.disabled
      receivedHook=hook
      required=input.required
      size=input.size
      value=input.value
      onChange=onChange
    }}
      {{if input.label input.label input.value}}
    {{/frost-radio-button}}
  {{/each}}
{{/if}}
