<div class="dummy-notification-container">
{{#each notifications as |notification|}}
  {{notification-message notification=notification}}
{{/each}}
</div>

<div class="dummy-body text-input field">

  <div class="section-title">Default</div>
  <hr>

    <div class="section">
      <div class="example">
        <div class="demo">
          {{frost-text value=model.default.value onInput=(action (mut model.default.value))}}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text}}
  ```"
          }}
        </div>
      </div>
    </div>


  <div class="section-title">State</div>
  <hr>
    <div class="section">
      <div class="example">
        <div class="title">error</div>
        <div class="demo">
          {{frost-text
            class="error"
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  class='error'
}}
  ```"
          }}
        </div>
      </div>

      <div class="example">
        <div class="title">disabled</div>
        <div class="demo">
          {{frost-text
            disabled=true
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  disabled=true
}}
  ```"
          }}
        </div>
      </div>

      <div class="example">
        <div class="title">disabled value</div>
        <div class="demo">
          {{frost-text
            disabled=true
            value="Read only text"
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  disabled=true
  value='Read only text'
}}
    ```"
}}
        </div>
      </div>

  </div>

  <div class="section-title">Options</div>
  <hr>

  <div class="section">
      <div class="example">
        <div class="title">placeholder</div>
         <div class="demo">
          {{frost-text
            placeholder='basic field'
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  placeholder='basic field'
}}
    ```"
          }}
        </div>
      </div>


      <div class="example">
        <div class="title">align</div>
        <div class="demo">
          {{frost-text
            align='right'
          }}
        </div>
        <div class="snippet">
          {{format-markdown "```handlebars
{{frost-text
  align='right'
}}
    ```"
          }}
        </div>
      </div>
  </div>

  <div class="example">
    <div class="title">tabindex</div>
    <div class="demo">
      {{frost-text
        tabindex='-1'
      }}
    </div>
    <div class="snippet">
      {{format-markdown "```handlebars
{{frost-text
  tabindex='-1'
}}
```"
      }}
    </div>
  </div>

  <div class="section-title">Events</div>
  <hr>
  <div class='section'>
    <div class="example">
      <div class="title">DOM events</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-dom-events }}
        {{frost-text
          onChange=(action 'event')
          onClick=(action 'event')
          onContextMenu=(action 'event')
          onDoubleClick=(action 'event')
          onDrag=(action 'event')
          onDragEnd=(action 'event')
          onDragEnter=(action 'event')
          onDragLeave=(action 'event')
          onDragOver=(action 'event')
          onDragStart=(action 'event')
          onDrop=(action 'event')
          onFocusIn=(action 'event')
          onFocusOut=(action 'event')
          onInput=(action 'event')
          onKeyDown=(action 'event')
          onKeyPress=(action 'event')
          onKeyUp=(action 'event')
          onMouseDown=(action 'event')
          onMouseEnter=(action 'event')
          onMouseLeave=(action 'event')
          onMouseMove=(action 'event')
          onMouseUp=(action 'event')
          onSubmit=(action 'event')
          onTouchCancel=(action 'event')
          onTouchEnd=(action 'event')
          onTouchMove=(action 'event')
          onTouchStart=(action 'event')
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
         <div>Template</div>
        {{code-snippet name='text-dom-events.hbs'}}
        <br>
        <div>Controller</div>
        {{code-snippet name='text-dom-events.js'}}
      </div>
    </div>

    <div class="example">
      <div class="title">Text support events</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-support-events }}
        {{frost-text
          onEnter=(action 'support' 'enter')
          onEscape=(action 'support' 'escape')
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        <div>Template</div>
        {{code-snippet name='text-support-events.hbs'}}
        <br>
        <div>Controller</div>
        {{code-snippet name='text-support-events.js'}}
      </div>
    </div>

    <div class="example">
      <div class="title">Deprecated events</div>
      <div class="demo">
        {{! BEGIN-SNIPPET text-deprecated-events }}
        {{frost-text
          onBlur=(action 'event')
          onFocus=(action 'event')
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
         <div>Template</div>
        {{code-snippet name='text-deprecated-events.hbs'}}
        <br>
        <div>Controller</div>
        {{code-snippet name='text-dom-events.js'}}
      </div>
    </div>
  </div>
</div>

