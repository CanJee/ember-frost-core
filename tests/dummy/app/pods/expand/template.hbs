<div class='dummy-body expand'>

  <div class='section-title'>Expression</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">text</div>
      <div class="demo">
        {{! BEGIN-SNIPPET expand-expression-text}}
        {{frost-expand
          hook='myExpand'
          content='Expanded content.'
        }}
        {{! END-SNIPPET expand-expression-text}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-expression-text.hbs"}}
      </div>
    </div>
    <div class="example">
      <div class="title">component</div>
      <div class="demo">
        {{! BEGIN-SNIPPET expand-expression-component}}
        {{frost-expand
          hook='myExpand'
          content=(component 'frost-icon'
                    hook='myIcon'
                    icon='error'
                  )
        }}
        {{! END-SNIPPET expand-expression-component}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-expression-component.hbs"}}
      </div>
    </div>
  </div>

  <div class='section-title'>Block</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">text</div>
      <div class="demo">
        {{! BEGIN-SNIPPET expand-block-text}}
        {{#frost-expand
          hook='myExpand'
        }}
          Expanded content.
        {{/frost-expand}}
        {{! END-SNIPPET expand-block-text}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-block-text.hbs"}}
      </div>
    </div>
    <div class="example">
      <div class="title">component</div>
      <div class="demo">
        {{! BEGIN-SNIPPET expand-block-component}}
        {{#frost-expand
          hook='myExpand'
        }}
          {{frost-icon
            hook='myIcon'
            icon='error'
          }}
        {{/frost-expand}}
        {{! END-SNIPPET expand-block-component}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-block-component.hbs"}}
      </div>
    </div>
  </div>

  <div class='section-title'>Initially Expanded</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="demo">
        {{! BEGIN-SNIPPET expand-expanded}}
        {{#frost-expand
          hook='myExpand'
          expanded=true
        }}
          Expanded content.
        {{/frost-expand}}
        {{! END-SNIPPET expand-expanded}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-expanded.hbs"}}
      </div>
    </div>
  </div>

  <div class='section-title'>Set Labels</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="demo">
        {{! BEGIN-SNIPPET expand-set-labels}}
        {{#frost-expand
          hook='myExpand'
          expandLabel='View information'
          collapseLabel='Hide information'
        }}
          Detailed information.
        {{/frost-expand}}
        {{! END-SNIPPET expand-set-labels}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-set-labels.hbs"}}
      </div>
    </div>
  </div>

