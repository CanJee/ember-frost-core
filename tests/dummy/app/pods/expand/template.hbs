  <div class='section-title'>Events</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="demo">
        {{! BEGIN-SNIPPET expand-events}}
        {{#frost-expand
          hook='myExpand'
          onExpand=(action 'onExpandHandler')
          onCollapse=(action 'onCollapseHandler')
        }}
          Expanded content.
        {{/frost-expand}}
        {{! END-SNIPPET expand-events}}
      </div>
      <br/>
      <div class="snippet">
        {{code-snippet name="expand-events.hbs"}}
      </div>
    </div>
  </div>

  <div class='section-title'>Query Parameter</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="demo">
        {{! BEGIN-SNIPPET expand-query}}
        {{#frost-expand
          hook='myExpand'
          expanded=exp
        }}
          Expanded content.
        {{/frost-expand}}
        {{! END-SNIPPET expand-query}}
      </div>
      <br/>
      <div class="snippet">
        Template
          {{code-snippet name="expand-expression-text.hbs"}}
        <br/>
        Controller
          {{code-snippet name="expand-query-controller.js"}}
      </div>
    </div>
  </div>
</div>
